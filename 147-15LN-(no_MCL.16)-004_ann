load("results/DE.RData")
library(dplyr)
library(biomaRt)
library(DESeq2)
library(tidyverse)

ensembl <- useMart("ENSEMBL_MART_ENSEMBL","hsapiens_gene_ensembl", host = "www.ensembl.org")
ensembl <- useDataset("hsapiens_gene_ensembl", mart=ensembl)

# Set the list of attributes
resCon_vV <- results(ddsObj, 
                  name="condition_Sensitive_vs_Resistant", 
                  alpha = 0.05)
                  
                  
annot <- getBM(attributes = c('ensembl_transcript_id_version', 
                            'ensembl_gene_id', 
                            'external_transcript_name',
                            'external_gene_name',
                            'entrezgene',
                            'description'),
             filters = 'ensembl_transcript_id_version', 
             values = rownames(resCon_vV ),
             mart =  ensembl)
 
 annotL <- annot[,c(1,5,4,6)]
 colnames(annotL) <- c("GeneID", "Entrez", "Symbol", "description")
 
save(annotL, file="results/annot.RData")
